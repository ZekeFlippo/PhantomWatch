@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhantomWatch</title>

    <link rel="shortcut icon" href="~/ghost_white.ico" type="image/x-icon" />
    <link rel="icon" href="~/ghost_white.ico" type="image/x-icon" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhantomWatch</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-custom border-bottom box-shadow mb-3">
            <div class="container">

                <!-- APP TITLE -->
                <a class="navbar-brand pw-title" asp-area="" asp-page="/Index">
                    PhantomWatch
                </a>

                @* Only show nav items if logged in *@
                @if (Context.Session.GetString("UserID") != null)
                {
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/AnalyticsDashboard">Analytics Dashboard</a>
                            </li>

                            @if (Context.Session.GetString("IsAdmin") == "1")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Admin">Admin Page</a>
                                </li>
                            }

                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>

    <div class="pw-main">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
