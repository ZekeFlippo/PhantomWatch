@page
@model PhantomWatchUI.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    .login-card {
        width: 420px;
        background: #121212;
        padding: 30px;
        border-radius: 12px;
        border: 2px solid #39FF14;
        color: white;
        box-shadow: 0 0 20px rgba(57,255,20,0.2);
        text-align: center;
    }

        .login-card h2 {
            margin-bottom: 16px;
            color: #39FF14;
            font-size: 28px;
        }

    .pw-input {
        width: 100%;
        margin-bottom: 12px;
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #39FF14;
        background: black;
        color: white;
    }

    .pw-button {
        padding: 10px 14px;
        background: #39FF14;
        border: none;
        color: black;
        font-weight: bold;
        border-radius: 6px;
        cursor: pointer;
    }
</style>

<div class="login-container">
    <div class="login-card">

        <h2>Login</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p style="color: #ff6b6b;">@Model.ErrorMessage</p>
        }

        <form method="post">
            <label>Email or Alias</label>
            <input class="pw-input" asp-for="EmailOrAlias" />

            <label>Password</label>
            <input class="pw-input" type="password" value="password" disabled />
            <small>(Password is not validated for this demo.)</small>

            <div style="margin-top: 1rem;">
                <button type="submit" class="pw-button">Login</button>
            </div>
        </form>

        <a asp-page="/SignUp" style="margin-top: 12px; display:block; color:#39FF14;">
            Need an account?
        </a>
    </div>
</div>
